<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'DIAMANTE GRUPO'})">Pikete</a></li>
			<li class="tab"><a href="#" class="active">Muela</a></li> 
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'DIAMANTE RIFA'})">Rifa</a></li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<ul id="chat" class="chat">
			<% chats.forEach(function(item) { %>
				<li class="<%= item.position %>">
					<div class="person-avatar circle" face="<%= item.avatar %>" color="<%= item.avatarColor %>" size="30"></div>
					<div class="head">
						<a href="#!" class="<%= item.gender %>">@<%= item.username %></a>
						<span class="date"><%= moment(item.inserted).format('MMM D, YYYY h:mm A') %></span>
					</div>
					<span class="text"><%= item.message %></span>
				</li>
			<% }) %>
		</ul>
	</div>
</div>

<!-- MODAL NEW CHAT -->

<div id="newModal" class="modal bottom-sheet fullscreen">
	<div class="modal-content">
		<div class="input-field">
			<textarea id="message" class="materialize-textarea" oninput="checkLength(200)" username="<%= username %>" gender="<%= gender %>" avatar="<%= avatar %>" avatarColor="<%= avatarColor %>"></textarea>
			<label for="message">Escriba su mensaje</label>
			<span class="helper-text">Restante: 200</span>
		</div>
	</div>
	<div class="modal-footer">
		<a href="#!" class="modal-close waves-effect waves-light btn-flat">Cerrar</a>
		<a onclick="chat()" class="modal-close waves-effect green-text btn-flat">Enviar</a>
	</div>
</div>

<!-- FLOATING BUTTON -->

<div class="bottom-space"></div>

<div class="fixed-action-btn">
	<a href="#newModal" class="btn-floating btn-large waves-effect waves-light modal-trigger green">
		<i class="large material-icons">add</i>
	</a>
</div>
