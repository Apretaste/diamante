<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" onclick="apretaste.send({command: 'DIAMANTE GRUPO'})">Pikete</a></li>
			<li class="tab"><a href="#" class="active">Rifa</a></li> 
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s12">
		<img class="responsive-img z-depth-1 delete-if-no-image" src="{{APP_SERVICE_PATH}}/images/premio.png" alt="ArtÃ­culo a rifar">

		<p><%= raffle.description %></p>

		<div class="chip"><%= chances %>% chances de ganar</div>

		<div><small>Sus chances de ganar dependen de su experiencia. Cierra el <%= raffle.end_date %> a las 11:59pm.</small></div>
	</div>
</div>

<% if(winners.length > 0) { %>
	<div class="row">
		<% winners.forEach(function(item){ %>
			<div class="col s4 m2">
				<div class="card person center-align">
					<a href="#!" class="grey-text text-darken-2" onclick="apretaste.send({command:'CHAT', data:{'userId':'@<%= item.username %>'}})">
						<div class="person-avatar circle" face="<%= item.avatar %>" color="<%= item.avatarColor %>" size="40" online="<%= item.online %>"></div>

						<div class="data <%= item.gender %>">
							<div>@<%= item.username %></div>
							<small><%= item.end_date %></small>
						</div>
					</a>
				</div>
			</div>
		<% }) %>
	</div>
<% } %>